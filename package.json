{
  "name": "@hennessyevan/aluminum-box",
  "version": "2.1.3",
  "description": "Blazing Fast React UI Primitive",
  "contributors": [
    "Evan Hennessy <hello@hennessyevan.com>"
  ],
  "keywords": [
    "react"
  ],
  "repository": "hennessyevan/aluminum-box",
  "license": "MIT",
  "main": "lib/src/index.js",
  "files": [
    "lib/src"
  ],
  "types": "lib/src/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "yarn run tslint && xo && nyc ava",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "rm -rf lib && yarn run build",
    "dev": "start-storybook -p 9009 -c .storybook",
    "build": "tsc --declaration",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np --no-publish",
    "benchmark": "echo Aluminum-Box && yarn build && react-benchmark tools/benchmarks/box.js && echo emotion/jsxstyle && react-benchmark tools/benchmarks/emotion-jsxstyle.js",
    "size": "size-limit",
    "coverage": "nyc report --reporter=html"
  },
  "dependencies": {
    "@emotion/hash": "^0.7.1",
    "emotion": "^10.0.9",
    "facepaint": "^1.2.1",
    "inline-style-prefixer": "^5.0.1",
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@emotion/primitives": "^10.0.10",
    "@storybook/addon-viewport": "^5.0.11",
    "@storybook/react": "^5.0.0",
    "@storybook/storybook-deployer": "^2.2.0",
    "@types/enzyme": "^3.1.15",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/murmurhash-js": "^1.0.3",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-test-renderer": "^16.0.3",
    "@types/sinon": "^7.0.3",
    "ava": "^1.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-emotion": "^10.0.9",
    "csstype": "^2.6.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "nyc": "^14.0.0",
    "react": "^16.8.0",
    "react-benchmark": "^2.1.0",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.8.0",
    "react-test-renderer": "^16.4.2",
    "sinon": "^7.3.2",
    "size-limit": "^1.3.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "tslint-xo": "^0.16.0",
    "typescript": "^3.2.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "react/jsx-sort-props": [
        "error",
        {
          "callbacksLast": false,
          "shorthandFirst": false,
          "noSortAlphabetically": true,
          "reservedFirst": true
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.8.0"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/src/index.js",
      "limit": "19 KB"
    }
  ],
  "ava": {
    "require": [
      "ts-node/register",
      "./test/_setup"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ]
  }
}
