{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "declaration": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "rootDirs": ["./src", "./tools"],
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
